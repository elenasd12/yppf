<h1><center>Compare Months</center></h1>

<div class = row>
  <div class = "col-md-4">
  </div>
  <div class="col-md-6">
    <%= form_for(@compare, url: {:controller => "compare", :action => "create"}) do |f|%>
      <%= f.label "Month 1" %>
      <%= f.select(:month1select, options_for_select(
        @months
      )) %>

      <%= f.label "Month 2" %>
      <%= f.select(:month2select, options_for_select(
        @months
      )) %>

      <%= f.submit %>
    <% end %>
    <!-- <%= label_tag 'Month 1' %><br>
    <%= collection_select(:post, nil, Expense.select(:month, :year).group(:month, :year).order(:year).reverse_order, :id, :combined_value)  %> -->
  </div>

  <div class = "col-md-2">
  </div>
</div>



<u1>
  <% if @month1.nil?  && @month2.nil?%>
  <div class = "row">
    <div class = "col-md-4">
    </div>
    <div class = "col-md-4">
    </div>
    <div class = "col-md-4">
    </div>
  </div>

  <% else %>
  <div class = "row">
    <div class = "col-md-6">
      <%= column_chart @month1 %>
    </div>
    <div class="col-md-6">
      <%=pie_chart @month1%>
      <%=pie_chart @month2%>
    </div>
    <br>
    </div>
  <%end%>
</u1>
