<h1><center>Compare Months</center></h1>

<div class = row>
  <div class = "col-md-3">
  </div>
  <div class="col-md-6">
    <%= form_tag(compare_create_path, method: "get", remote: true, role: "form", class: "form") do %>
      <div class="form-group">
        <label class="control-label">Month 1:</label>
        <%= select_tag(:month1select,
            options_for_select(
              @months), class: "form-control") %>
      </div>

      <div class="form-group">
        <label class="control-label">Month 2:</label>
        <%= select_tag(:month2select,
            options_for_select(
              @months), class: "form-control") %>
      </div>


      <%= submit_tag("Search", class: "btn btn-default" ) %>
    <% end %>
  </div>
</div>

<div class="row col-md-offset-1 col-md-11">
  <div id="search_results"> </div>
</div>
