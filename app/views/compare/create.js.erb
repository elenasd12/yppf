//<!--High Charts bar chart  -->
$(function () {
    $('#bar').highcharts({
        chart: {
            backgroundColor: '#ffffe6',
            type: 'column'
        },
        title: {
            text: 'Expense Comparison'
        },
        xAxis: {
            categories: <%= @selectedtypes.to_json.html_safe %>
        },
        yAxis: {
            title: {
                text: 'Money Spent'
                // y axis - how much money
            }
        },
        series: [{
            // months
            name: '<%= @month1name %>',
            data: <%= @month1values.to_json.html_safe %>,
            color: '#ED6A5A'

        }, {
            name: '<%= @month2name %>',
            data: <%= @month2values.to_json.html_safe %>,
            color: '#36c9c6'
        }]
    });
});
