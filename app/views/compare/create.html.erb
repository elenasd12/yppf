<p id="notice"><%= notice %></p>

<head>
  <script src="http://code.highcharts.com/highcharts.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
</head>


<h1>Compare</h1>

<div class = "row">
  <div class = "col-md-6">
    <!-- <div id="container2" style="width:100%; height:400px;"></div> -->
    <div id="pie1" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
  </div>
  <div class = "col-md-6">
    <!-- <div id="container2" style="width:100%; height:400px;"></div> -->
    <div id="pie2" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
  </div>
  <br>
</div>

<div class = "row">
  <div id="bar" style="width:100%; height:400px;"></div>
</div>

<button onclick="goBack()">Back</button>

<script>
function goBack(){
  window.history.back();
}
</script>

<!-- Pie Chart for month 1 -->
<script>
$(function () {
    $('#pie1').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: '<%=@month1name%>'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>${point.y}</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: 'Spent',
            colorByPoint: true,
            data: <%= @series1.to_json.html_safe %>
        }]
    });
});
</script>



<!-- Pie Chart for month 2 -->
<script>
$(function () {
    $('#pie2').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: '<%=@month2name%>'
        },
        tooltip: {
          pointFormat: '{series.name}: <b>${point.y}</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: 'Spent',
            colorByPoint: true,
            data: <%= @series2.to_json.html_safe %>
        }]
    });
});
</script>


<!--High Charts bar chart  -->
<script>
$(function () {
    $('#bar').highcharts({
        chart: {
            type: 'column'
        },
        title: {
            text: 'Expense Comparison'
        },
        xAxis: {
            categories: <%= @selectedtypes.to_json.html_safe %>
        },
        yAxis: {
            title: {
                text: 'Money Spent'
                // y axis - how much money
            }
        },
        series: [{
            // months
            name: '<%= @month1name %>',
            data: <%= @month1values.to_json.html_safe %>
        }, {
            name: '<%= @month2name %>',
            data: <%= @month2values.to_json.html_safe %>
        }]
    });
});
</script>
