 <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"%>
  <%= javascript_include_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"%>
<div class="panel panel-default">
    <div class="panel-heading">Manage Recurrent Expenses</div>
    <div class="panel-body">
    <button type="button" class="btn btn-success" onclick="window.location.href='<%=new_expense_reference_path%>'">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Recurrent Expense</button>
  </div>
  <ul class="nav nav-tabs">
  <!--li role="presentation" class="active"><a data-toggle="tab" href="#once">Once</a></li-->
  <li role="presentation"><a data-toggle="tab" href="#everymonth">Recurrent Expenses</a></li>
 
</ul>
<div class="tab-content">
    <%if false%>
     <div id="once" class="tab-pane fade in active" >
<table class="table">
  <thead>
    <tr>
      <th>Type</th>
     <th>Name</th>
      <th>Category</th>
       <th>Month</th>
      <th>Year</th>
      <th>Value</th>
      <th>Status</th>
       <th></th>
    </tr>
  </thead>

  <tbody>
    <% @expense_refs_once.each do |expense_ref| %>
      <tr>
        <td><%= value_for_key("exp_ref_type",expense_ref.ref_type)%></td>
        <td><%= expense_ref.ref_name %></td>
        <td><%= expense_ref.expense_category_name %></td>
        <td><%= value_for_key("month",expense_ref.ref_month) %></td>
        <td><%= expense_ref.ref_year %></td>
        <td><%= expense_ref.ref_value %></td>
        <td><%= value_for_key("exp_ref_status",expense_ref.ref_status) %></td>
        <td>
            <!--%= button_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %-->
           
            <div class="btn-group" role="group" >
            <a class="btn btn-default btn-xs" data-confirm="<%=@destroy_warning_msg%>" rel="nofollow" data-method="delete" href='<%=expense_reference_path(expense_ref.id)%>' aria-hidden="true"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            <a class="btn btn-default btn-xs" rel="nofollow" href='<%=edit_expense_reference_path(expense_ref.id)%>' aria-hidden="true"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            
            
            </div>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
 <%end%>
 <div id="everymonth" class="tab-pane fade in active">
     <table class="table">
  <thead>
    <tr>
      <th>Type</th>
       <th>Name</th>
       <th>Category</th>
      <th>Month</th>
      <th>Year</th>     
      <th>Value</th>
      <th>Status</th>
       <th></th>
      
    </tr>
  </thead>

  <tbody>
    <% @expense_refs_every.each do |expense_ref| %>
      <tr>
        <td><%= value_for_key("exp_ref_type",expense_ref.ref_type)%></td>
         <td><%= expense_ref.ref_name %></td>
          <td><%= expense_ref.expense_category_name %></td>
        <td><%= value_for_key("month",expense_ref.ref_month) %></td>
        <td><%= expense_ref.ref_year %></td>
       
        <td><%= expense_ref.ref_value %></td>
        <td><%= value_for_key("exp_ref_status",expense_ref.ref_status) %></td>
        <td>
            <!--%= button_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %-->
           
            <div class="btn-group" role="group" >
            <a class="btn btn-default btn-xs" data-confirm="<%=@destroy_warning_msg%>" rel="nofollow" data-method="delete" href='<%=expense_references_path+"/"+expense_ref.id.to_s%>' aria-hidden="true"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            
          <a class="btn btn-default btn-xs" rel="nofollow" href='<%=edit_expense_reference_path(expense_ref.id)%>' aria-hidden="true"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            <button type="button" class="btn btn-default btn-xs" aria-hidden="true" disabled="disabled"><span class="glyphicon glyphicon-pause" aria-hidden="true"></span></button>
            
            </div>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>
     </div>
</div>
</div>

